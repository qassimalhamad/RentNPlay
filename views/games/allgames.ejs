<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>All Games</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <main class="main-content">
        <h1>My Games</h1>

        <ul class="games-list">
            <% games.forEach((game)=>{ %>
                <li class="game-item">
                    <a href="/users/<%= user._id %>/games/<%= game._id %>" class="game-link">
                        <div class="game-container">
                            <p class="game-name"><%= game.game %></p>
                            <p class="game-price">Price: <%= game.price %></p>
                            <p class="game-contact">Contact: <%= game.contact %></p>
                            <p class="game-purchase-type">Purchase Type: <%= game.purchaseType %></p>
                        </div>
                    </a>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>
